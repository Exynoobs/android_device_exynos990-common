<resources>
    <!-- All the capabilities of the LEDs on this device, stored as a bit field. -->
    <integer name="config_deviceLightCapabilities">0</integer>

    <!-- Defines the actions shown in advanced reboot submenu -->
    <string-array name="config_restartActionsList">
        <item>restart</item>
        <item>restart_recovery</item>
        <item>restart_fastboot</item>
        <item>restart_download</item>
     </string-array>

    <!-- Whether device has a screen with a higher aspect ratio -->
    <bool name="config_haveHigherAspectRatioScreen">true</bool>

    <!-- Whether device has a notch -->
    <bool name="config_haveNotch">true</bool>

    <!-- Display mode remapping table.
         If the mode names returned by the backend do not match
         the predefined and translated strings in the Settings
         app, they can be remapped here. The format is
         "oldname:newname", one per entry. -->
    <string-array name="config_displayModeMappings" translatable="false">
        <item>Dynamic:Natural</item>
        <item>Adaptive:Adaptive</item>
    </string-array>

    <!-- Should we filter any display modes which are unmapped? -->
    <bool name="config_filterDisplayModes">true</bool>

    <!-- Default value for proximity check on screen wake
     NOTE ! - Enable for devices that have a fast response proximity sensor (ideally < 300ms)-->
    <bool name="config_proximityCheckOnWake">true</bool>
    <integer name="config_proximityCheckTimeout">100</integer>
    <bool name="config_proximityCheckOnWakeEnabledByDefault">false</bool>
</resources>
